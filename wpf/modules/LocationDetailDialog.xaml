<Window x:Class="wpf.modules.LocationDetailDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detail Lokasi" Height="420" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="None" Background="Transparent" AllowsTransparency="True">

    <Border Background="White" CornerRadius="12" Padding="16" BorderBrush="#E6EEF2" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,12">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock x:Name="txtLocation" Text="Lokasi" FontSize="18" FontWeight="Bold" Foreground="#233B44" />
                    <Border x:Name="statusBadge" Background="#FFF4C2" CornerRadius="8" Margin="12,0,0,0" Padding="8,4" VerticalAlignment="Center">
                        <TextBlock x:Name="txtStatus" Text="Pending" FontSize="12" FontWeight="SemiBold" Foreground="#8A6D00"/>
                    </Border>
                </StackPanel>
                <Button Content="✕" Width="30" Height="30" DockPanel.Dock="Right" HorizontalAlignment="Right" VerticalAlignment="Top" Click="BtnClose_Click" Background="Transparent" BorderThickness="0" Foreground="#666"/>
            </DockPanel>

            <!-- Content -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <!-- Weather Icon / Summary -->
                <StackPanel Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Image x:Name="imgCondition" Width="120" Height="120" Stretch="Uniform" Margin="0,0,0,8"/>
                    <TextBlock x:Name="txtTemp" Text="-- °C" FontSize="28" FontWeight="Bold" Foreground="#233B44" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="txtCondition" Text="Loading..." FontSize="14" Foreground="#4A6B75" HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Details -->
                <StackPanel Grid.Column="1" Margin="18,0,0,0" VerticalAlignment="Center">
                    <TextBlock x:Name="txtLocalTime" Text="Waktu lokal: --" FontSize="13" Foreground="#556E75" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                        <TextBlock Text="Kelembapan: " FontWeight="SemiBold" Foreground="#2C5F6F" Width="110"/>
                        <TextBlock x:Name="txtHumidity" Text="-- %" Foreground="#334D54" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                        <TextBlock Text="Kecepatan angin: " FontWeight="SemiBold" Foreground="#2C5F6F" Width="110"/>
                        <TextBlock x:Name="txtWind" Text="-- kph" Foreground="#334D54" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,6,0,6">
                        <TextBlock Text="Status Verifikasi: " FontWeight="SemiBold" Foreground="#2C5F6F" Width="110"/>
                        <TextBlock x:Name="txtStatusBig" Text="--" Foreground="#334D54" />
                    </StackPanel>

                    <TextBlock x:Name="lblError" Text="" Foreground="#B00020" Visibility="Collapsed" TextWrapping="Wrap" Margin="0,10,0,0"/>
                </StackPanel>
            </Grid>

            <!-- Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="btnOk" Content="OK" Width="90" Height="36" Background="#1F4959" Foreground="White" Click="BtnOk_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
