<Window x:Class="wpf.modules.UpdateLocationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Lokasi" Height="160" Width="420" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <TextBlock Text="Masukkan lokasi baru:" Margin="0,0,0,6"/>
            <TextBox x:Name="txtNewLocation" Height="30"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Batal" Width="90" Margin="0,0,8,0" Click="BtnCancel_Click"/>
            <Button Content="Simpan" Width="100" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window>
