<Window x:Class="wpf.modules.AddExportView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Add New Export" Height="400" Width="500" WindowStartupLocation="CenterOwner" Background="#F5F5F5"
        FontFamily="Inter, Segoe UI, Arial">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Tambah Pengiriman Baru" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

        <StackPanel Grid.Row="1" Margin="0,10,0,10" VerticalAlignment="Top">
            <!-- ID and Status are generated/handled internally; not shown in the form -->

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Nama Barang:" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtNamaBarang" Grid.Column="1" />
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Berat (kg):" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox x:Name="txtBerat" Grid.Column="1" />
            </Grid>

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Pilih Kapal:" Grid.Column="0" VerticalAlignment="Center"/>
                <ComboBox x:Name="cmbKapal" Grid.Column="1" DisplayMemberPath="NamaKapal"/>
            </Grid>

            <!-- <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Status:" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBlock x:Name="txtStatus" Grid.Column="1" Text="Proses" VerticalAlignment="Center" FontWeight="Bold" />
            </Grid> -->

            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Detail:" Grid.Column="0" VerticalAlignment="Top"/>
                <TextBox x:Name="txtDetail" Grid.Column="1" AcceptsReturn="True" Height="80" TextWrapping="Wrap"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                <TextBlock Text="Dibuat:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBlock x:Name="txtDibuat" VerticalAlignment="Center"/>
                <TextBlock Text="    Estimasi:" VerticalAlignment="Center" Margin="20,0,10,0"/>
                <TextBlock x:Name="txtEstimasi" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" Width="100" Margin="0,0,10,0" Click="BtnCancel_Click"/>
            <Button x:Name="btnSave" Content="Save" Width="100" Click="BtnSave_Click"/>
        </StackPanel>

    </Grid>
</Window>
