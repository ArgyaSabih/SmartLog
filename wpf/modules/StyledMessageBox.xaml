<Window x:Class="wpf.modules.StyledMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message" Height="200" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Border Background="White" CornerRadius="10" Padding="16" BorderBrush="#E6EEF2" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                <TextBlock x:Name="txtTitle" FontSize="16" FontWeight="Bold" Foreground="#233B44" />
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtMessage" TextWrapping="Wrap" Foreground="#334D54" FontSize="13" />
            </ScrollViewer>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button x:Name="btnNo" Content="No" Width="90" Height="34" Margin="0,0,8,0" Click="BtnNo_Click" Visibility="Collapsed"/>
                <Button x:Name="btnOk" Content="OK" Width="90" Height="34" Background="#1F4959" Foreground="White" Click="BtnOk_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
