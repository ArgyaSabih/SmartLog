<Window x:Class="wpf.modules.DetailKapal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Detail Kapal" SizeToContent="Height" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="Inter, Segoe UI, Arial">

    <Window.Resources>
        <Style x:Key="CloseButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="InfoLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#5A6C7D"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="InfoValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1A1A1A"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Main Card -->
        <Border Background="White" 
                CornerRadius="15"
                Margin="20">
            <Border.Effect>
                <DropShadowEffect Color="Black" Opacity="0.2" BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" Background="#3B7D98" 
                        CornerRadius="15,15,0,0" 
                        Padding="30,20">
                    <Grid>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ðŸš¢ Detail Kapal" 
                                       FontSize="22" 
                                       FontWeight="Bold" 
                                       Foreground="White"/>
                            <TextBlock x:Name="txtNamaKapal" 
                                       Text="Nama Kapal" 
                                       FontSize="16" 
                                       Foreground="#E0F2F7" 
                                       Margin="0,5,0,0"/>
                        </StackPanel>

                        <!-- Close Button -->
                        <Button Content="âœ•" 
                                Width="35" Height="35"
                                FontSize="18"
                                FontWeight="Bold"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Style="{StaticResource CloseButtonStyle}"
                                Click="BtnClose_Click"/>
                    </Grid>
                </Border>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="40,30">

                        <!-- Status Section -->
                        <StackPanel Margin="0,0,0,30">
                            <TextBlock Text="Status" Style="{StaticResource InfoLabelStyle}"/>
                            <Border x:Name="borderStatus"
                                    Background="#90EE90" 
                                    CornerRadius="12" 
                                    Padding="12,6" 
                                    HorizontalAlignment="Left"
                                    Margin="0,5,0,0">
                                <TextBlock x:Name="txtStatus" 
                                           Text="Verified" 
                                           FontSize="12" 
                                           FontWeight="SemiBold" 
                                           Foreground="White"/>
                            </Border>
                        </StackPanel>

                        <!-- Information Section -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="20"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0">
                                <!-- ID Kapal -->
                                <TextBlock Text="ID Kapal" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="txtIdKapal" Text="-" Style="{StaticResource InfoValueStyle}"/>

                                <!-- Nomor Registrasi -->
                                <TextBlock Text="Nomor Registrasi" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="txtNomorRegistrasi" Text="-" Style="{StaticResource InfoValueStyle}"/>

                                <!-- Kapasitas -->
                                <TextBlock Text="Kapasitas" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="txtKapasitas" Text="-" Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="2">
                                <!-- Lokasi Saat Ini -->
                                <TextBlock Text="Lokasi Saat Ini" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="txtLokasiSekarang" Text="-" Style="{StaticResource InfoValueStyle}"/>

                                <!-- Lokasi Tujuan -->
                                <TextBlock Text="Lokasi Tujuan" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="txtLokasiTujuan" Text="-" Style="{StaticResource InfoValueStyle}"/>

                                <!-- Tipe Kapal -->
                                <TextBlock Text="Tipe Kapal" Style="{StaticResource InfoLabelStyle}"/>
                                <TextBlock x:Name="txtTipeKapal" Text="-" Style="{StaticResource InfoValueStyle}"/>
                            </StackPanel>
                        </Grid>

                        <!-- Informasi Tambahan -->
                        <Border Background="#E8F4F8" 
                                CornerRadius="10" 
                                Padding="20" 
                                Margin="0,10,0,0">
                            <Grid>
                                <TextBlock Text="Informasi Kapal" 
                                           FontSize="14" 
                                           FontWeight="SemiBold" 
                                           Foreground="#2C5F6F"
                                           VerticalAlignment="Center"/>
                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center">
                                    <TextBlock x:Name="txtBiayaOperasional" 
                                               Text="Biaya Operasional: Rp 0/hari" 
                                               FontSize="13" 
                                               Foreground="#3B7D98"
                                               HorizontalAlignment="Right"/>
                                    <TextBlock x:Name="txtKetersediaan" 
                                               Text="Status: Tersedia" 
                                               FontSize="12" 
                                               Foreground="#5A6C7D"
                                               Margin="0,3,0,0"
                                               HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                </StackPanel>

                <!-- Footer Buttons -->
                <Border Grid.Row="2" 
                        BorderBrush="#E0E0E0" 
                        BorderThickness="0,1,0,0" 
                        Padding="40,20"
                        Background="#FAFAFA"
                        CornerRadius="0,0,15,15">
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Tutup" 
                                Width="120" 
                                Height="40"
                                Background="#6C757D"
                                Foreground="White"
                                FontSize="14"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="BtnClose_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="8"
                                            Padding="20,10">
                                        <ContentPresenter HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#6C757D"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#5A6268"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
