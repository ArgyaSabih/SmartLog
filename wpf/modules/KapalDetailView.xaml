<Window x:Class="wpf.modules.KapalDetailView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf.modules"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Detail Kapal - SmartLogistic" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="#F8F9FA"
        FontFamily="Inter, Segoe UI, Arial">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="#1F4959"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#335F6F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#1F4959"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#335F6F"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F4959"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#335F6F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Badge Styles -->
        <Style x:Key="VerifiedBadge" TargetType="Border">
            <Setter Property="Background" Value="#D1F4E0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#1F4959" 
                BorderThickness="0"
                Padding="40,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Back Button -->
                <Button Grid.Column="0" Content="â† Kembali" 
                        Style="{StaticResource SecondaryButton}"
                        Foreground="#335F6F"
                        Background="White"
                        Click="BtnBack_Click"
                        Margin="0,0,20,0"
                        Padding="15,4"
                        FontSize="13"
                        Height="35"
                        Cursor="Hand"/>

                <!-- Title -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Detail Kapal" FontSize="22" FontWeight="Bold" 
                               Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- User Profile and Logout -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="40" Height="40" Fill="White" Margin="0,0,10,0">
                        <Ellipse.Effect>
                            <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <StackPanel VerticalAlignment="Center" Margin="0,0,15,0">
                        <TextBlock x:Name="txtUserName" Text="admin1" FontWeight="Bold" FontSize="14" Foreground="White"/>
                        <TextBlock x:Name="txtUserEmail" Text="admin@smartlog.com" 
                                   FontSize="11" Foreground="#E0E0E0"/>
                    </StackPanel>
                    <Button Content="Logout" 
                            Background="#E74C3C" 
                            Foreground="White"
                            FontSize="13"
                            FontWeight="SemiBold"
                            Padding="15,8"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BtnLogout_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#E74C3C"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#C0392B"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid Margin="30">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Kapal Info Card -->
                <Border Grid.Row="0" Background="White" CornerRadius="12" 
                        Padding="30" Margin="0,0,0,30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left: Kapal Info -->
                        <StackPanel Grid.Column="0">
                            <!-- Destination / tujuan shown above the name -->
                                <TextBlock x:Name="txtTujuan" Text="Surabaya" 
                                           FontSize="14" Foreground="#666666"/>
                            <!-- Ship name with status badge -->
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,6,0,10">
                                <TextBlock x:Name="txtKapalName" Text="Nusantara Jaya" 
                                           FontSize="32" FontWeight="Bold" 
                                           Foreground="#2C3E50"/>
                                <Border x:Name="statusBadge" Background="#FFF4C2" CornerRadius="8" Margin="12,0,0,0" Padding="10,4" VerticalAlignment="Center">
                                    <TextBlock x:Name="txtStatusBadge" Text="Pending" FontWeight="SemiBold" FontSize="12" Foreground="#8A6D00"/>
                                </Border>
                            </StackPanel>
                            <!-- Current location shown below the name -->
                            <StackPanel Orientation="Horizontal" Margin="0,5,0,20">
                                <TextBlock Text="ðŸ“" FontSize="16" Margin="0,0,5,0"/>
                                <TextBlock x:Name="txtLokasiSekarang" Text="Pelabuhan Tanjung Priok" 
                                           FontSize="14" Foreground="#666666"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal">
                <Button x:Name="btnDetailLokasi" Content="Detail Lokasi" 
                    Style="{StaticResource PrimaryButton}"
                    Margin="0,0,15,0" Click="BtnDetailLokasi_Click"/>
                <Button x:Name="btnUpdateLokasi" Content="Update Lokasi" 
                    Style="{StaticResource SecondaryButton}" Click="BtnUpdateLokasi_Click"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right: Capacity Info -->
                        <Border Grid.Column="1" Background="#4A92A8" CornerRadius="12" 
                                Padding="25" Margin="20,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Pantau kapasitas kapal" 
                                           FontSize="16" FontWeight="Bold" 
                                           Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="Jangan lupa untuk selalu memantau kapasitas kapal dan barang yang sudah masuk. Dengan begitu, kita bisa memanage, mengolah, dan menjaga perjalanan tetap aman." 
                                           FontSize="12" Foreground="White" 
                                           TextWrapping="Wrap" Margin="0,0,0,20"
                                           LineHeight="18"/>

                                <!-- Capacity Display -->
                                <Grid Margin="0,10,0,20">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Viewbox Grid.Column="0" Width="60" Height="60" Margin="0,0,15,0">
                                        <Canvas Width="100" Height="100">
                                            <!-- Truck Icon -->
                                            <Path Data="M20,50 L60,50 L60,30 L80,30 L90,45 L90,65 L85,65 M20,65 L30,65 M55,65 L65,65 M75,50 L75,30 L60,30 M60,30 L60,50" 
                                                  Stroke="White" StrokeThickness="4" StrokeLineJoin="Round" Fill="Transparent"/>
                                            <!-- Wheels -->
                                            <Ellipse Canvas.Left="28" Canvas.Top="60" Width="14" Height="14" 
                                                     Stroke="White" StrokeThickness="3" Fill="Transparent"/>
                                            <Ellipse Canvas.Left="73" Canvas.Top="60" Width="14" Height="14" 
                                                     Stroke="White" StrokeThickness="3" Fill="Transparent"/>
                                            <!-- Clock -->
                                            <Ellipse Canvas.Left="70" Canvas.Top="20" Width="25" Height="25" 
                                                     Stroke="White" StrokeThickness="2" Fill="Transparent"/>
                                            <Path Data="M82.5,27.5 L82.5,32.5 L85,35" 
                                                  Stroke="White" StrokeThickness="2" StrokeLineJoin="Round"/>
                                        </Canvas>
                                    </Viewbox>

                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="Kapasitas Tersedia" 
                                                   FontSize="12" Foreground="White" Margin="0,0,0,5"/>
                                        <TextBlock FontSize="32" FontWeight="Bold" Foreground="White">
                                            <Run x:Name="txtCapacity" Text="70.931"/>
                                            <Run Text=" Kg" FontSize="20"/>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>

                                <!-- Status controls removed per request -->
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>

                <!-- Barang Table -->
                <Border Grid.Row="2" Background="White" CornerRadius="12" 
                        Padding="30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Table Title and Actions -->
                        <DockPanel Grid.Row="0" Margin="0,0,0,10">
                            <TextBlock Text="Daftar Barang" FontSize="20" FontWeight="Bold" DockPanel.Dock="Left" VerticalAlignment="Center" />
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right">
                                <!-- 'Tambah Barang' removed from Admin dashboard per request -->
                            </StackPanel>
                        </DockPanel>

                        <!-- Barang List -->
                        <Border Grid.Row="1" CornerRadius="10" 
                                BorderBrush="#E0E0E0" BorderThickness="1">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Table Header -->
                                <Border Grid.Row="0" Background="#EDF4F7" 
                                        CornerRadius="10,10,0,0" Padding="25,18">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Column="0" Text="ID Barang â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="1" Text="Nama Barang â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="2" Text="Berat â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="3" Text="Customer â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="4" Text="Status â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="5" Text="Tanggal â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        <TextBlock Grid.Column="6" Text="Aksi â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                    </Grid>
                                </Border>

                                <!-- Table Content -->
                                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                    <ItemsControl x:Name="BarangList" Margin="25,15">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border BorderBrush="#E8EEF2" BorderThickness="0,0,0,1" Padding="0,18">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock Grid.Column="0" Text="{Binding IdBarang}" 
                                                                   FontSize="13" VerticalAlignment="Center" Foreground="#3B7D98" HorizontalAlignment="Left"/>
                                                        <TextBlock Grid.Column="1" Text="{Binding NamaBarang}" 
                                                                   FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="#1A1A1A" HorizontalAlignment="Left"/>
                                                        <TextBlock Grid.Column="2" Text="{Binding BeratBarang}" 
                                                                   FontSize="13" VerticalAlignment="Center" Foreground="#2C3E50" HorizontalAlignment="Left"/>
                                                        <TextBlock Grid.Column="3" Text="{Binding Customer}" 
                                                                   FontSize="13" VerticalAlignment="Center" Foreground="#2C3E50" HorizontalAlignment="Left"/>
                                                        
                                                        <!-- Status Badge -->
                                                        <Border Grid.Column="4" Background="{Binding StatusBackground}" 
                                                                CornerRadius="12" Padding="10,4" 
                                                                HorizontalAlignment="Left" VerticalAlignment="Center">
                                                            <TextBlock Text="{Binding Status}" 
                                                                       FontSize="12" FontWeight="SemiBold" 
                                                                       Foreground="{Binding StatusForeground}"/>
                                                        </Border>
                                                        
                                                        <TextBlock Grid.Column="5" Text="{Binding TanggalMasuk, StringFormat=dd MMM yyyy}" 
                                                                   FontSize="13" VerticalAlignment="Center" Foreground="#5A6C7D" HorizontalAlignment="Left"/>
                                                        
                                                        <!-- Action Buttons -->
                                                        <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Left">
                                                            <Button Background="Transparent" BorderThickness="0"
                                                                    Cursor="Hand"
                                                                    ToolTip="Batalkan Pengiriman"
                                                                    Click="BtnDeleteBarang_Click"
                                                                    Margin="0,0,10,0"
                                                                    Padding="5">
                                                                <iconPacks:PackIconMaterial Kind="Close" 
                                                                                            Width="20" Height="20" 
                                                                                            Foreground="#F44336"/>
                                                            </Button>
                                                            <Button Background="Transparent" BorderThickness="0"
                                                                    Cursor="Hand"
                                                                    ToolTip="Verifikasi"
                                                                    Click="BtnVerifyBarang_Click"
                                                                    Margin="0,0,10,0"
                                                                    Padding="5">
                                                                <iconPacks:PackIconMaterial Kind="Check" 
                                                                                            Width="20" Height="20" 
                                                                                            Foreground="#4CAF50"/>
                                                            </Button>
                                                            <Button Background="Transparent" BorderThickness="0"
                                                                    Cursor="Hand"
                                                                    ToolTip="Detail"
                                                                    Click="BtnDetailBarang_Click"
                                                                    Tag="{Binding PengirimanId}"
                                                                    Padding="5">
                                                                <iconPacks:PackIconMaterial Kind="FileDocumentOutline" 
                                                                                            Width="20" Height="20" 
                                                                                            Foreground="#000000"/>
                                                            </Button>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </ScrollViewer>
                            </Grid>
                        </Border>

                        <!-- Pagination -->
                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                            <Button Content="â—€ Previous" Style="{StaticResource ActionButtonStyle}" Margin="0,0,10,0" MinWidth="80"/>

                            <Border Background="White" CornerRadius="5" Padding="15,8" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,10,0">
                                <TextBlock x:Name="txtPageInfoKapalDetail" Text="01" FontWeight="SemiBold"/>
                            </Border>

                            <Border Background="White" CornerRadius="5" Padding="15,8" 
                                    BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,10,0">
                                <TextBlock Text="02" Foreground="Gray"/>
                            </Border>

                            <TextBlock Text="..." VerticalAlignment="Center" Margin="5,0" FontSize="16"/>

                            <Button Content="Next â–¶" Style="{StaticResource ActionButtonStyle}" Margin="10,0,0,0" MinWidth="80"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
