<Window x:Class="wpf.modules.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf.modules"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="Register" Height="835" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#2C5F72"
        FontFamily="Inter, Segoe UI, Arial">

    <Window.Resources>
        
        <Style x:Key="InputBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <TextBlock x:Name="Watermark" Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" VerticalAlignment="Center"
                                       Margin="2,0,0,0" IsHitTestVisible="False"
                                       Visibility="Collapsed"/>
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="Watermark" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Grid>
                            <TextBlock x:Name="Watermark" Text="{TemplateBinding Tag}" 
                                       Foreground="Gray" VerticalAlignment="Center"
                                       Margin="2,0,0,0" IsHitTestVisible="False"
                                       Visibility="Visible"/>
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center" />
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RegisterButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F4959"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#335F6F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#1A3A4A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>

    <Grid>        
            <Border Background="White" CornerRadius="0,0,15,15" Padding="40,40">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Header Section with Image -->
                    <Border Grid.Row="0" Background="#2C5F72" 
                            CornerRadius="10" 
                            Padding="40"
                            Margin="0,0,0,30">
                        <StackPanel HorizontalAlignment="Center">
                            <!-- Ship Image -->
                            <Image Source="pack://application:,,,/images/kapal.png" 
                                Width="300" Height="200" 
                                Stretch="Uniform"
                                Margin="0,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Form Section -->
                    <StackPanel Grid.Row="1">
                            
                            <TextBlock Text="Registrasikan Dirimu!"
                                    Foreground="#000000" FontSize="28" FontWeight="Bold"
                                    HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            <TextBlock Text="Selamat Datang di SmartLog!!"
                                    Foreground="#A0A0A0" FontSize="15"
                                    HorizontalAlignment="Center" Margin="0,0,0,25"/>
                            
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                                        VerticalAlignment="Center" Height="1"/>
                                <TextBlock Grid.Column="1" Text="Silahkan mengisi data diri anda!!" 
                                        Foreground="#A0A0A0" FontSize="13" Margin="15,0"/>
                                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" 
                                        VerticalAlignment="Center" Height="1"/>
                            </Grid>
                            
                            <!-- Row 1: Nama & Username -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10,8" Height="45">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="Account" Grid.Column="0" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Margin="0,0,10,0" 
                                                                    Foreground="#B0B0B0"/>
                                        <TextBox x:Name="txtNama" Grid.Column="1" 
                                                Tag="Nama" 
                                                Style="{StaticResource InputBoxStyle}"/>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10,8" Height="45">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="AccountOutline" Grid.Column="0" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Margin="0,0,10,0" 
                                                                    Foreground="#B0B0B0"/>
                                        <TextBox x:Name="txtUsername" Grid.Column="1" 
                                                Tag="Username" 
                                                Style="{StaticResource InputBoxStyle}"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Row 2: Email & Password -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10,8" Height="45">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="EmailOutline" Grid.Column="0" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Margin="0,0,10,0" 
                                                                    Foreground="#B0B0B0"/>
                                        <TextBox x:Name="txtEmail" Grid.Column="1" 
                                                Tag="Email" 
                                                Style="{StaticResource InputBoxStyle}"/>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10,8" Height="45">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="LockOutline" Grid.Column="0" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Margin="0,0,10,0" 
                                                                    Foreground="#B0B0B0"/>
                                        <PasswordBox x:Name="txtPassword" Grid.Column="1" 
                                                    Tag="Password" 
                                                    Style="{StaticResource PasswordBoxStyle}"/>
                                        <iconPacks:PackIconMaterial Kind="EyeOffOutline" Grid.Column="2" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Cursor="Hand" 
                                                                    Foreground="#B0B0B0"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Row 3: Telepon & Alamat -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10,8" Height="45">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="Phone" Grid.Column="0" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Margin="0,0,10,0" 
                                                                    Foreground="#B0B0B0"/>
                                        <TextBox x:Name="txtTelepon" Grid.Column="1" 
                                                Tag="Telepon" 
                                                Style="{StaticResource InputBoxStyle}"/>
                                    </Grid>
                                </Border>

                                <Border Grid.Column="2" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="8" Padding="10,8" Height="45">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <iconPacks:PackIconMaterial Kind="MapMarker" Grid.Column="0" 
                                                                    Width="20" Height="20" 
                                                                    VerticalAlignment="Center" 
                                                                    Margin="0,0,10,0" 
                                                                    Foreground="#B0B0B0"/>
                                        <TextBox x:Name="txtAlamat" Grid.Column="1" 
                                                Tag="Alamat" 
                                                Style="{StaticResource InputBoxStyle}"/>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!-- Link to Login -->
                            <TextBlock HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="13">
                                <Run Text="Sudah punya akun?" Foreground="#808080"/>
                                <Hyperlink Click="GoToLogin_Click" TextDecorations="None">
                                    <Run Text="Login disini" FontWeight="SemiBold" Foreground="#2C5F72"/>
                                </Hyperlink>
                            </TextBlock>

                            <!-- Register Button -->
                            <Button x:Name="btnRegistrasi" 
                                    Content="Registrasi" 
                                    Margin="0,20,0,0"
                                    Height="50"
                                    Background="#2C5F72"
                                    Style="{StaticResource RegisterButtonStyle}"
                                    Click="BtnRegistrasi_Click"/>

                            <!-- Cancel Button (Hidden) -->
                            <Button x:Name="btnCancel" IsCancel="True" Click="BtnCancel_Click" 
                                    Visibility="Collapsed"/>
                        </StackPanel>
                </Grid>
            </Border>
    </Grid>
</Window>
