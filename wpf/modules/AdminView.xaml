<Window x:Class="wpf.modules.AdminView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpf.modules"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        mc:Ignorable="d"
        Title="SmartLogistic - Admin" 
        WindowState="Maximized"
        WindowStartupLocation="CenterScreen"
        Background="White"
        FontFamily="Inter, Segoe UI, Arial">

    <Window.Resources>
        <!-- Status Badge Styles -->
        <Style x:Key="PendingBadge" TargetType="Border">
            <Setter Property="Background" Value="#FFE5D1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>

        <Style x:Key="ClearBadge" TargetType="Border">
            <Setter Property="Background" Value="#D1F4E0"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>

        <Style x:Key="ProcessBadge" TargetType="Border">
            <Setter Property="Background" Value="#FFF3CD"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="12,4"/>
        </Style>

        <!-- Tab Button Style -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1b4965"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="Margin" Value="5,5,5,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="8,8,0,0">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <Rectangle Height="3" VerticalAlignment="Bottom"
                                       Fill="#62b6cb" RadiusX="1.5" RadiusY="1.5"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Action Button style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1F4959"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#335F6F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="White" CornerRadius="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="#1F4959" Padding="0,20"
                    BorderThickness="0">
                <Grid Margin="30,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Border Background="White" Width="35" Height="35" CornerRadius="5" Margin="0,0,15,0">
                            <TextBlock Text="ðŸ“¦" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="SmartLogistic" FontSize="22" FontWeight="Bold" 
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>

                    <!-- Header search removed -->

                    <!-- User Profile and Controls -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse Width="40" Height="40" Fill="White" Margin="0,0,10,0">
                            <Ellipse.Effect>
                                <DropShadowEffect BlurRadius="5" ShadowDepth="2" Opacity="0.3"/>
                            </Ellipse.Effect>
                        </Ellipse>
                        <StackPanel VerticalAlignment="Center" Margin="0,0,15,0">
                            <TextBlock x:Name="txtUserName" Text="admin1" FontWeight="Bold" FontSize="14" Foreground="White"/>
                            <TextBlock x:Name="txtUserEmail" Text="admin@smartlog.com" 
                                       FontSize="11" Foreground="#E0E0E0"/>
                        </StackPanel>
                        
                        <!-- Logout Button -->
                        <Button x:Name="btnLogout" Content="Logout" 
                                Click="BtnLogout_Click"
                                Background="#DC3545" 
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,8"
                                FontSize="13"
                                FontWeight="SemiBold"
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#DC3545"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#C82333"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Main Content -->
            <Grid Grid.Row="1" Background="#F8F9FA">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tabs -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" 
                        Margin="30,20,30,0" Padding="5">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="5" ShadowDepth="0" Opacity="0.08"/>
                    </Border.Effect>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Tab Buttons -->
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <Button x:Name="btnCustomerTab" Content="Customer" 
                                    Style="{StaticResource ActiveTabButtonStyle}"
                                    Click="BtnCustomerTab_Click"/>
                            <Button x:Name="btnKapalTab" Content="Kapal" 
                                    Style="{StaticResource TabButtonStyle}"
                                    Click="BtnKapalTab_Click"/>
                        </StackPanel>
                        
                        <!-- Total Count -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                            <iconPacks:PackIconMaterial Kind="CheckCircle" 
                                                        Width="16" Height="16" 
                                                        Foreground="#62b6cb"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,8,0"/>
                            <TextBlock VerticalAlignment="Center">
                                <Run Text="Total: " FontSize="13" Foreground="#666666"/>
                                <Run x:Name="txtVerifiedCount" Text="0" FontSize="13" FontWeight="Bold" Foreground="#62b6cb"/>
                                <Run Text="/" FontSize="13" Foreground="#999999"/>
                                <Run x:Name="txtTotalCount" Text="0" FontSize="13" Foreground="#999999"/>
                            </TextBlock>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Content Area -->
                <Border Grid.Row="1" Background="White" CornerRadius="10,10,10,10" 
                        Margin="30,0,30,30" Padding="30">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- Form row for adding kapal -->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                        <!-- Customer Table -->
                        <Grid x:Name="CustomerContent" Grid.Row="0" Grid.RowSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header with Total -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Run Text="Total: " FontSize="14" Foreground="#666666"/>
                                    <Run x:Name="txtTotal" Text="10" FontSize="14" FontWeight="Bold" Foreground="#2C5F8D"/>
                                </TextBlock>
                            </Grid>

                            <!-- Customer List -->
                            <Border Grid.Row="1" CornerRadius="10" 
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Table Header -->
                                    <Border Grid.Row="0" Background="#EDF4F7" 
                                            CornerRadius="10,10,0,0" Padding="25,18">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="Username â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="1" Text="Email â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="2" Text="ID Customer â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="3" Text="Alamat â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="4" Text="Telepon â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="5" Text="Tanggal â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>

                                    <!-- Table Content -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="CustomerList" Margin="25,15">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#E8EEF2" BorderThickness="0,0,0,1" Padding="0,18">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="{Binding Username}" 
                                                                       FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="#1A1A1A" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="1" Text="{Binding Email}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#2C3E50" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="2" Text="{Binding CustomerId}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#3B7D98" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="3" Text="{Binding Address}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#2C3E50" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="4" Text="{Binding Phone}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#5A6C7D" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="5" Text="{Binding Date, StringFormat=dd MMM yyyy}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#5A6C7D" HorizontalAlignment="Left"/>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <!-- Pagination -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                <Button Content="â—€ Previous" Style="{StaticResource ActionButtonStyle}" Margin="0,0,10,0" MinWidth="80"/>

                                <Border Background="White" CornerRadius="5" Padding="15,8" 
                                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,10,0">
                                    <TextBlock x:Name="txtPageInfo" Text="01" FontWeight="SemiBold"/>
                                </Border>

                                <Border Background="White" CornerRadius="5" Padding="15,8" 
                                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,10,0">
                                    <TextBlock Text="02" Foreground="Gray"/>
                                </Border>

                                <TextBlock Text="..." VerticalAlignment="Center" Margin="5,0" FontSize="16"/>

                                <Button Content="Next â–¶" Style="{StaticResource ActionButtonStyle}" Margin="10,0,0,0" MinWidth="80"/>
                            </StackPanel>
                        </Grid>

                        <!-- Kapal Table (Hidden by default) -->
                        <Grid x:Name="KapalContent" Grid.Row="0" Grid.RowSpan="3" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Table Header with Total and Add button -->
                            <Grid Grid.Row="0" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Run Text="Total: " FontSize="14" Foreground="#666666"/>
                                    <Run x:Name="txtTotalKapal" Text="10" FontSize="14" FontWeight="Bold" Foreground="#2C5F8D"/>
                                </TextBlock>

                                <Button Grid.Column="1" x:Name="btnOpenAddKapal" Content="Tambah Kapal" Click="BtnAddKapal_Click" Style="{StaticResource ActionButtonStyle}" Height="32" Width="140" HorizontalAlignment="Right"/>
                            </Grid>

                            <!-- Kapal List -->
                            <Border Grid.Row="1" CornerRadius="10" 
                                    BorderBrush="#E0E0E0" BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!-- Table Header -->
                                    <Border Grid.Row="0" Background="#EDF4F7" 
                                            CornerRadius="10,10,0,0" Padding="25,18">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Column="0" Text="Nama Kapal â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="1" Text="Lokasi Saat Ini â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="2" Text="ID Kapal â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="3" Text="No. Registrasi â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="4" Text="Kapasitas â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="5" Text="Tujuan â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                            <TextBlock Grid.Column="6" Text="Aksi â–¼" FontWeight="SemiBold" FontSize="14" Foreground="#2C5F6F" HorizontalAlignment="Left"/>
                                        </Grid>
                                    </Border>

                                    <!-- Table Content -->
                                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                        <ItemsControl x:Name="KapalList" Margin="25,15">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <Border BorderBrush="#E8EEF2" BorderThickness="0,0,0,1" Padding="0,18">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>

                                                            <TextBlock Grid.Column="0" Text="{Binding NamaKapal}" 
                                                                       FontSize="14" FontWeight="Medium" VerticalAlignment="Center" Foreground="#1A1A1A" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="1" Text="{Binding LokasiSekarang}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#2C3E50" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="2" Text="{Binding IdKapal}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#3B7D98" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="3" Text="{Binding NomorRegistrasi}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#2C3E50" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="4" Text="{Binding Kapasitas}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#5A6C7D" HorizontalAlignment="Left"/>
                                                            <TextBlock Grid.Column="5" Text="{Binding Tujuan}" 
                                                                       FontSize="13" VerticalAlignment="Center" Foreground="#5A6C7D" HorizontalAlignment="Left"/>
                                                            
                                                            <!-- Action Buttons -->
                                                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Left">
                                                                <Button Background="Transparent" BorderThickness="0"
                                                                        Cursor="Hand"
                                                                        ToolTip="Hapus"
                                                                        Click="BtnDeleteKapal_Click"
                                                                        Margin="0,0,10,0"
                                                                        Padding="5">
                                                                    <iconPacks:PackIconMaterial Kind="Close" 
                                                                                                Width="20" Height="20" 
                                                                                                Foreground="#F44336"/>
                                                                </Button>
                                                                <Button Background="Transparent" BorderThickness="0"
                                                                        Cursor="Hand"
                                                                        ToolTip="Lihat Detail"
                                                                        Click="BtnOpenKapalDetail_Click"
                                                                        Tag="{Binding IdKapal}"
                                                                        Padding="5">
                                                                    <iconPacks:PackIconMaterial Kind="FileDocumentOutline" 
                                                                                                Width="20" Height="20" 
                                                                                                Foreground="#000000"/>
                                                                </Button>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </ScrollViewer>
                                </Grid>
                            </Border>

                            <!-- Pagination -->
                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                <Button Content="â—€ Previous" Style="{StaticResource ActionButtonStyle}" Margin="0,0,10,0" MinWidth="80"/>

                                <Border Background="White" CornerRadius="5" Padding="15,8" 
                                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,10,0">
                                    <TextBlock x:Name="txtPageInfoKapal" Text="01" FontWeight="SemiBold"/>
                                </Border>

                                <Border Background="White" CornerRadius="5" Padding="15,8" 
                                        BorderBrush="#E0E0E0" BorderThickness="1" Margin="0,0,10,0">
                                    <TextBlock Text="02" Foreground="Gray"/>
                                </Border>

                                <TextBlock Text="..." VerticalAlignment="Center" Margin="5,0" FontSize="16"/>

                                <Button Content="Next â–¶" Style="{StaticResource ActionButtonStyle}" Margin="10,0,0,0" MinWidth="80"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>
